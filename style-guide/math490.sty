\renewcommand*{\theexercise}{\thechapter.\thesection.\roman{exercise}}
\renewcommand*{\thetheorem}{\thechapter.\thesection.\arabic{theorem}}

\newcounter{chapter}
\newcommand{\setexercise}[3]{%
	\setcounter{chapter}{#1}
	\setcounter{section}{#2}
\setcounter{exercise}{#3-1}}

\newcounter{tmpchp}
\newcounter{tmpsec}
\newcommand{\settheorem}[3]{%
	\setcounter{tmpchp}{\thechapter}
	\setcounter{chapter}{#1}
	\setcounter{tmpsec}{\thesection}
	\setcounter{section}{#2}
\setcounter{theorem}{#3-1}}

\newcommand{\popthm}{%
	\setcounter{chapter}{\thetmpchp}
	\setcounter{section}{\thetmpsec}
}

